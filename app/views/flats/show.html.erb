
<div class="container my-3 d-flex justify-content-center">
  <div class="card" style="width: 44rem;">
    <img class="card-img-top" src= '<%= "#{@flat.picture_url}" %>' alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= @flat.name %></h5>
      <p class="card-text"><%= @flat.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <p class="card-text"><%= @flat.address %></p>
      </li>
      <li class="list-group-item d-flex flex-row">
        <i class="material-icons">people</i>
        <p class="card-text ml-3"><%= @flat.number_of_guests %></p>
      </li>
      <li class="list-group-item d-flex flex-row align-items-center">
        <i class="material-icons">euro_symbo</i>
        <p class="card-text"><%= @flat.price_per_night %></p>
      </li>   
    </ul>
    <div class="card-body d-flex flex-column">
      <%= link_to("All Flats", flats_path, class: "btn btn-outline-success") %>
      <%= link_to("Edit", edit_flat_path(@flat), class: "btn btn-outline-warning my-3") %>
      <%= link_to("Remove", flat_path(@flat), class: "btn btn-outline-danger", method: "DELETE") %> 
    </div>
  </div>
</div>


