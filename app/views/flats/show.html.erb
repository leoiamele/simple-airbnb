
<div class="container my-3 ">
<div class="card" style="width: 38rem;">
  <img class="card-img-top" src= '<%= "#{@flat.picture_url}" %>' alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= @flat.name %></h5>
    <p class="card-text"><%= @flat.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <p class="card-text"><%= @flat.address %></p>
    </li>
    <li class="list-group-item">
      <i class="material-icons">people</i>
      <p class="card-text"><%= @flat.number_of_guests %></p>
    </li>
    <li class="list-group-item">
      <i class="material-icons">euro_symbo</i>
      <p class="card-text"><%= @flat.price_per_night %></p>
    </li>
    
  </ul>
  <div class="card-body">
    <%= link_to("All Flats", flats_path, class: "btn btn-outline-success") %>
    <%= link_to("Edit", edit_flat_path(@flat), class: "btn btn-outline-warning mx-4") %>
    <%= link_to("Remove", flat_path(@flat), class: "btn btn-outline-danger", method: "DELETE") %>
    
  </div>
</div>
</div>


