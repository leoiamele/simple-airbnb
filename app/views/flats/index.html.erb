<h1>All Our Flats</h1>
<p><%= "All #{Flat.count} flats." %></p>
<% @flats.each do |flat| %>
  <h3><%= flat.name %></h3>
  <p><%= flat.address %></p>
  <p><%= flat.price_per_night %></p>
  <p><%= flat.number_of_guests %></p>
  <p><%= link_to("More info", flat_path(flat)) %></p>
  <p><%= link_to("Edit Flat", edit_flat_path(flat)) %></p>
  <p><%= link_to("Remove Flat", flat_path(flat), method: "DELETE") %></p>
  <br>
  <hr>
<% end %>

<%= link_to("New flat", new_flat_path) %>
