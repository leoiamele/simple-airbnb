<div class="container">
  <h1>All Our Flats</h1>
  <% if params['query'].present? %>
    <p><%= "You searched for #{params['query']}. We found #{@flats.count} flat/s out of #{Flat.count} on our website." %></p>
  <% else %>
    <p><%= "All #{Flat.count} flats." %></p>
  <% end %>
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-auto mb-3">
      <div class="card" style="width: 18rem;">
        <img src="<%= flat.picture_url %>" class="card-img-top" alt="<%= flat.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><%= flat.number_of_guests %></p>
          <p class="card-text"><%= flat.price_per_night %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
