<%= simple_form_for @flat do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :address, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :price_per_night, as: :select, collection: [50, 75, 100, 150, 200, 250, 300], input_html: { class: 'form-control' }%>
  </div>
  <div class="form-group">
    <%= f.input :number_of_guests, as: :select, collection: 1..12, input_html: { class: 'form-control' }%>
  </div>
  <div class="form-group">
    <%= f.input :picture_url, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

